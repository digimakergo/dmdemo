{
  "policies": {
    "anonymous": [{
          "operation": ["content/read"],
          "limited_to": {
            "under": [3, 9]
          }
        }
      ],
    "member": [{
          "operation": ["content/update", "content/read"],
          "limited_to": {
            "contenttype": ["article"],
            "author": "self"
          }
        },
        {
            "operation": ["content/create"],
            "limited_to": {
              "contenttype": ["image"],
              "under": [461]
            }
        },      
        {
          "operation": ["content/update"],
          "limited_to": {
            "contenttype": "user",
            "user": "self",
            "fields": ["login", "password","firstname", "lastname", "email"]
          }
        },
        {
          "operation": ["site/access"],
          "limited_to": {
            "site": ["dmdemo"]
          }
        }
      ],
    "edit": [
      {
          "operation": ["site/access"],
          "limited_to": {
            "site": ["admin"]
          }
        },
       {
          "operation": ["content/read"],
          "limited_to": {
            "under":"{under_folder}"
          }
        },
        {
          "operation": ["content/create", "content/delete", "content/update"],
          "limited_to": {
            "contenttype": ["article", "image"],
            "under":"{under_folder}"
          }
        }
      ],
    "admin": [
      {
          "operation": ["site/access"],
          "limited_to": {
            "site": ["admin"]
          }
      },
      {
        "operation": ["eui/all"],
        "limited_to": {
          "view": ["main/7"]
        }
      },
      {
        "operation":["content/read", "content/create", "content/delete", "content/update", "content/move", "content/delete_subtree", "content/copy", "access/assigned-users", "access/assign-user", "access/manage"]
      }
    ]
  },
  "roles": {
    "anonymous":["anonymous"],
    "member": ["member"],
    "edit": ["edit"],
    "admin": ["admin"]
  },
  "role_variables": ["under_folder"]
}
