{
  "folder": {
    "name": "Folder",
    "table_name": "dmc_folder",
    "name_pattern": "{title}",
    "has_version": false,
    "has_location": true,    
    "data_fields":[{"identifier":"folder_type", "fieldtype":"string"}],
    "fields": [{
        "identifier": "title",
        "type": "text",
        "name": "Title",
        "required": true
      },
      {
        "identifier": "display_type",
        "type": "select",
        "name": "Display type",
        "parameters":{
          "list": [
            {"text":"News", "value":"news"}
          ]
        },
        "required": false
      },
      {
        "identifier": "summary",
        "type": "richtext",
        "name": "Summary",
        "required": false
      }
    ]
  },
  "frontpage": {
    "name": "Frontpage",
    "table_name": "dmc_frontpage",
    "has_version": false,
    "has_location": true,    
    "fields": [{
        "identifier": "title",
        "type": "text",
        "name": "Title",
        "required": true
      },
      {
        "identifier": "slideshow",
        "type": "relationlist",
        "name": "Slide show",
        "required": false
      },
      {
        "identifier": "mainarea",
        "type": "text",
        "name": "Main container",
        "required": true
      },
      {
        "identifier": "mainarea_blocks",
        "type": "relationlist",
        "name": "Main area blocks",
        "required": false
      },
      {
        "identifier": "sidearea",
        "type": "text",
        "name": "Side container",
        "required": true
      },
      {
        "identifier": "sidearea_blocks",
        "type": "relationlist",
        "name": "Side blocks",
        "required": false
      }
    ]
  },
  "article": {
    "Name": "Article",
    "table_name": "dmc_article",
    "has_version": true,
    "has_location": true,
    "name_pattern": "{title}",
    "fields": [{
        "identifier": "title",
        "type": "text",
        "name": "Title",
        "parameters": {
          "max_length": 300
        },
        "required": true
      },
      {
        "identifier": "editors",
        "type": "relationlist",
        "name": "Editors",
        "required": false,
        "parameters":{
          "type":"user"
        }
      },
      {
        "identifier": "coverimage",
        "type": "image",
        "name": "Cover image",
        "required": false
      },
      {
        "identifier": "summary",
        "type": "richtext",
        "name": "Summary",
        "required": false,
        "parameters": {
          "mode":"compact"
        }
      },
      {
        "identifier": "body",
        "type": "richtext",
        "name": "Body",
        "required": false
      },
      {
        "identifier": "relations",
        "type": "container",
        "is_output": true,
        "name": "Relations",
        "required": false,
        "children_order": [
          "related_articles",
          "useful_resources"
        ],
        "children": [{
            "identifier": "related_articles",
            "type": "relationlist",
            "required": false,
            "name": "Related articles",
            "parameters": {
              "type": "article"
            }
          },
          {
            "identifier": "useful_resources",
            "type": "relationlist",
            "required": false,
            "name": "Useful resources",
            "parameters": {
              "type": "image"
            }
          }
        ]
      }      
    ]
  },
  "usergroup": {
    "name": "User group",
    "table_name": "dmc_usergroup",
    "has_version": false,
    "name_pattern": "{title}",
    "has_location": true,   
    "fields": [{
        "identifier": "title",
        "type": "text",
        "name": "Title",
        "required": true
      },
      {
        "identifier": "summary",
        "type": "richtext",
        "name": "Summary",
        "required": false
      }
    ]
  },
  "role": {
    "name": "Role",
    "table_name": "dmc_role",
    "has_version": false,
    "name_pattern": "{title}",
    "has_location": false,   
    "data_fields":[{"identifier":"author", "fieldtype":"int"}, {"identifier":"published", "fieldtype":"int"}, {"identifier":"modified", "fieldtype":"int"}],
    "fields": [{
        "identifier": "name",
        "type": "text",
        "name": "Name",
        "required": true
      },
      {
        "identifier": "summary",
        "type": "text",
        "name": "Summary",
        "required": false
      },
      {
        "identifier": "identifier",
        "type": "text",
        "name": "Role identifier",
        "required": false
      },
      {
        "identifier": "under_folder",
        "type": "relation",
        "name": "Under folder",
        "parameters":{
          "type":"folder",
          "value":"id"
        },
        "required": false
      }
    ]
  },
  "user": {
    "name": "User",
    "table_name": "dmc_user",
    "name_pattern": "{firstname} {lastname}",
    "has_version": true,
    "has_location": true,
    "fields_display": [
      "login",
      "password"
    ],
    "fields": [{
        "identifier": "login",
        "type": "text",
        "name": "Username",
        "required": true
      },
      {
        "identifier": "password",
        "type": "password",
        "name": "Password",
        "required": false
      },
      {
        "identifier": "firstname",
        "type": "text",
        "name": "First name",
        "required": true
      },
      {
        "identifier": "lastname",
        "type": "text",
        "name": "Last name",
        "required": true
      },
      {
        "identifier": "email",
        "type": "text",
        "name": "Email",
        "required": true
      }    
    ]
  },
  "image": {
    "name": "Image",
    "table_name": "dmc_image",
    "has_version": false,
    "has_location": false,
    "name_pattern":"{name}",
    "data_fields":[ {"identifier":"location_id", "fieldtype":"int"}, {"identifier":"_author", "fieldtype":"int"}, {"identifier":"_published", "fieldtype":"int"}, {"identifier":"_modified", "fieldtype":"int"}, {"identifier":"_name", "fieldtype":"string"}, {"identifier":"_cuid", "fieldtype":"string"}],
    "fields": [
      {
        "identifier": "name",
        "type": "text",
        "name": "Name",
        "required": true
      },
      {
        "identifier": "image",
        "type": "image",
        "name": "Image",
        "required": true       
      }
    ]
  },
  "file": {
    "name": "File",
    "table_name": "dmc_file",
    "has_version": false,
    "has_location": false,
    "fields_display": [
      "filetype",
      "title",
      "path"
    ],
    "fields": [{
        "identifier": "filetype",
        "type": "text",
        "name": "Type",
        "required": false
      },
      {
        "identifier": "title",
        "type": "text",
        "name": "Title",
        "required": true
      },
      {
        "identifier": "path",
        "type": "text",
        "name": "Image path",
        "required": true
      }
    ]
  }
}
